{
    "aui-carousel": {
        "requires": [
            "anim",
            "aui-event",
            "aui-image-viewer-base",
            "aui-image-viewer-slideshow",
            "node-event-delegate",
            "node-focusmanager"
        ],
        "skinnable": true
    },

    "aui-carousel-swipe": {
        "requires": [
            "aui-carousel",
            "aui-widget-swipe",
            "base-build"
        ],
        "condition": {
            "trigger": "aui-carousel",
            "ua": "touchEnabled"
        },
        "skinnable": true
    },

    "aui-carousel-mobile-touch": {
        "requires": [
            "base-build",
            "aui-carousel"
        ],
        "condition": {
            "test": "aui-carousel-mobile-touch-test.js",
            "trigger": "aui-carousel"
        }
    }
}
