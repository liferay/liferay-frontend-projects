{
  "look-and-feel": {
    "compatibility": [
      {
        "version": [
          "7.0.0+"
        ]
      }
    ],
    "theme": [
      {
        "$": {
          "id": "base-theme",
          "name": "base-theme"
        },
        "template-extension": [
          "vm"
        ],
        "settings": [
          {
            "setting": [
              {
                "$": {
                  "configurable": "true",
                  "key": "show-breadcrumb",
                  "type": "checkbox",
                  "value": "true"
                }
              },
              {
                "$": {
                  "configurable": "true",
                  "key": "parent-setting",
                  "type": "input",
                  "value": "true"
                }
              }
            ]
          }
        ],
        "portlet-decorator": [
          {
            "$": {
              "id": "portlet-decorator-1",
              "name": "Decorator 1"
            },
            "portlet-decorator-css-class": [
              "portlet-decorator-1"
            ]
          },
          {
            "$": {
              "id": "portlet-decorator-2",
              "name": "Decorator 2"
            },
            "portlet-decorator-css-class": [
              "portlet-decorator-2"
            ]
          },
          {
            "$": {
              "id": "portlet-decorator-3",
              "name": "Decorator 3"
            },
            "portlet-decorator-css-class": [
              "portlet-decorator-3"
            ]
          }
        ]
      }
    ]
  }
}