<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="base-theme" name="base-theme">
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="show-breadcrumb" type="checkbox" value="true" />
		</settings>
		<portlet-decorator id="portlet-decorator-1" name="Decorator 1">
			<portlet-decorator-css-class>portlet-decorator-1</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="portlet-decorator-2" name="Decorator 2">
			<portlet-decorator-css-class>portlet-decorator-2</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>