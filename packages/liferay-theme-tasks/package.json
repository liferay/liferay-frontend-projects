{
  "name": "liferay-theme-tasks",
  "version": "1.4.5",
  "description": "A set of tasks for building and deploying Liferay Portal themes.",
  "license": "MIT",
  "main": "index.js",
  "author": "Rob Frampton <rob.g.frampton@gmail.com> (https://github.com/Robert-Frampton)",
  "repository": "liferay/liferay-theme-tasks",
  "keywords": [
    "liferay",
    "theme"
  ],
  "scripts": {
    "checkFormat": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "test": "nyc ava",
    "lint": "eslint '*.js' 'lib/**/*.js' 'tasks/**/*.js' 'test/**/*.js'",
    "precommit": "lint-staged",
    "prettier": "prettier-eslint '*.js' 'lib/**/*.js' 'tasks/**/*.js' 'test/**/*.js'"
  },
  "ava": {
    "concurrency": 5,
    "files": [
      "test/lib/**/*.js",
      "test/tasks/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write lib/**/*.js tasks/**/*.js test/**/*.js",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "index.js",
      "{lib,tasks}/**/*"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "async": "^0.9.0",
    "compass-mixins": "^0.12.8",
    "convert-bootstrap-2-to-3": "^1.0.1",
    "cross-spawn": "^2.2.3",
    "del": "^1.1.1",
    "diff": "^1.4.0",
    "fs-extra": "^0.24.0",
    "globby": "^4.0.0",
    "gogo-shell": "*",
    "gulp-concat": "^2.5.2",
    "gulp-debug": "^2.0.0",
    "gulp-filter": "^2.0.2",
    "gulp-help": "^1.6.1",
    "gulp-if": "^2.0.2",
    "gulp-inject": "^2.2.0",
    "gulp-liferay-r2-css": "^0.0.2",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^0.8.0",
    "gulp-plumber": "^0.6.6",
    "gulp-prompt": "^0.1.2",
    "gulp-rename": "^1.2.0",
    "gulp-replace-task": "^0.2.1",
    "gulp-sourcemaps": "1.6.0",
    "gulp-storage": "^1.0.6",
    "gulp-util": "^3.0.6",
    "inquirer": "^0.12.0",
    "liferay-plugin-node-tasks": "^1.0.9",
    "lodash": "^3.10.0",
    "minimist": "^1.1.0",
    "node-bourbon": "4.2.3",
    "npm-keyword": "^4.2.0",
    "package-json": "^1.2.0",
    "resolve": "^1.1.7",
    "run-sequence": "^1.0.2",
    "through2": "^2.0.0",
    "update-notifier": "^1.0.0",
    "vinyl-paths": "^1.0.0",
    "xml2js": "^0.4.15"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "bluebird": "^3.3.4",
    "chai": "^1.10.0",
    "chai-fs": "^0.1.0",
    "eslint": "^4.11.0",
    "eslint-config-liferay": "^2.0.0",
    "gogo-shell-helper": "^0.0.8",
    "gulp": "^3.9.0",
    "gulp-ruby-sass": "^2.0.6",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.2",
    "liferay-theme-deps-6.2": "*",
    "liferay-theme-deps-7.0": "*",
    "lint-staged": "^4.0.0",
    "nyc": "^6.4.4",
    "prettier-eslint-cli": "^4.4.0",
    "sinon": "^1.17.2"
  }
}
